[Unit]
Description=Memory Device (rclone)
AssertPathIsDirectory=/home/pi/drive/Garage_Pics
After=lighttpd.service

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount MemoryDevice:Garage_Videos/ /home/pi/drive/Garage_Videos --allow-other --cache-tmp-upload-path=/tmp/rclone/upload --cache-chunk-path=/tmp/rclone/chunks --cache-workers=8 --cache-writes --cache-dir=/tmp/rclone/vfs --cache-db-path=/tmp/rclone/db --no-modtime --drive-use-trash --stats=0 --checkers=16 --bwlimit=40M --dir-cache-time=60m --cache-info-age=60m --config=/home/pi/.config/rclone/rclone.conf
ExecStop=/bin/fusermount -u /home/pi/drive/Garage_Videos
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
